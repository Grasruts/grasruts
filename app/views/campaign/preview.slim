        .col-lg-8
          .campaign-tabs
            ul.tabs-controls
              li.active data-tab="campaign" 
                a href="#"  Campaign Story
              li data-tab="backer" 
                a href="#"  Backer List
              li data-tab="faq" 
                a href="#"  FAQ
              li data-tab="updates" 
                a href="#"  Updates
              li data-tab="comment" 
                a href="#"  Comments
            .campaign-content
              #campaign.tabs.active
                = sanitize @campaign.about
