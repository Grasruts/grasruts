- content_for :body_class, "campaign-detail"
main#main.site-main
  .page-title.background-campaign
    .container
      h1 The Oreous Pillow
  .campaign-content
    .container
      .campaign
        .campaign-item.clearfix
          .campaign-image.embed-responsive.embed-responsive-16by9.mt-5
            - if @campaign.video_id
              iframe.embed-responsive-item frameborder="0" src=("http://www.youtube.com/embed/#{@campaign.video_id}")
            - else
              = image_tag @campaign.card_image
          .campaign-box
            a.category href="#"  = @campaign.campaign_category.name.capitalize
            h3 = @campaign.name
            .campaign-description
              p = @campaign.card_description.try(:capitalize)
            .campaign-author.clearfix
              .author-profile
                a.author-icon href="#"
                  = image_tag current_user.avatar.url(:thumb) 
                | by 
                a.author-name href="#"  = current_user.name.capitalize
              .author-address
                span.ion-location 
                = @campaign.location.try(:capitalize)
            .process
              .raised
                span
              .process-info
                .process-funded
                  span = number_with_precision(@campaign.goal, :precision => 2, :delimiter => ',')
                  | funding goal
                .process-pledged
                  span> $8100
                  | pledged
                .process-time
                  span> 37
                  | backers
                .process-time
                  - unless @campaign.status == 'draft'
                    span = @campaign.campaign_status
                    - if @campaign.campaign_status.is_a? Integer 
                      | days remaining
            - unless @campaign.status == 'draft'
              .button
                form#priceForm.campaign-price.quantity action="#" 
                  input min="0" name="s" placeholder="" type="number" value="1" /
                  button.btn-primary type="submit"  Back this Campaign
                a.btn-secondary href="#" 
                  i.fa.fa-heart aria-hidden="true" 
                  | Remind me
            .share
              p Share this project
              ul
                li.share-facebook
                  a href="#" 
                    i.fa.fa-facebook aria-hidden="true" 
                li.share-twitter
                  a href="#" 
                    i.fa.fa-twitter aria-hidden="true" 
                li.share-google-plus
                  a href="#" 
                    i.fa.fa-google-plus aria-hidden="true" 
                li.share-linkedin
                  a href="#" 
                    i.fa.fa-linkedin aria-hidden="true" 
                li.share-code
                  a href="#" 
                    i.fa.fa-code aria-hidden="true" 
  /! .campaign-content
  .campaign-history
